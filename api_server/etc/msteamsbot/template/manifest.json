{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
    "manifestVersion": "1.5",
    "version": "1.0.4",
    "id": "{{botId}}",
    "packageName": "codestream.codestream{{env}}",
    "developer": {
        "name": "CodeStream{{env}}",
        "websiteUrl": "https://www.codestream.com",
        "privacyUrl": "https://www.codestream.com/privacy",
        "termsOfUseUrl": "https://www.codestream.com/terms"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "CodeStream{{env}}"
    },
    "description": {
        "short": "CodeStream{{env}}",
        "full": "Shift left by making code performance, code quality and code discussion part of the earliest stages of the development process."
    },
    "accentColor": "#00CE7C",
    "bots": [
        {
            "botId": "{{botId}}",
            "scopes": [
                "personal",
                "team"
            ],
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "help",
                            "description": "Get help using CodeStream"
                        },
                        {
                            "title": "signin",
                            "description": "Sign in to CodeStream"
                        },
                        {
                            "title": "signout",
                            "description": "Sign out from CodeStream"
                        }
                    ]
                },
                {
                    "scopes": [
                        "team"
                    ],
                    "commands": [
                        {
                            "title": "help",
                            "description": "Get help using CodeStream"
                        },
                        {
                            "title": "connect",
                            "description": "Connect this channel to CodeStream"
                        },
                        {
                            "title": "disconnect",
                            "description": "Disconnect this channel from CodeStream"
                        }
                    ]
                }
            ],
            "supportsFiles": false,
            "isNotificationOnly": false
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ]
}